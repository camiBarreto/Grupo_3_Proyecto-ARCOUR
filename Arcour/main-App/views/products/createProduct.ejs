<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARCOUR</title>
    <link rel="icon" href="/images/Logo-ARCOUR.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>

    <nav class="main-nav">
        <%- include("../partials/navBar.ejs") %>
    </nav>

    <main>

        <div class="contenido-register">

            <div class="login-box">
                <h2 id="titulo">Formulario de Carga y Edici√≥n de Productos</h2>
                <h2 class="register-subtitulo">Salida y llegada</h2>
                <form action="/products/post" method="post" class="register-form">

                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="salida" title>Sale desde</label>
                                </div>
                                <div class="ant-input">
                                    <select name="departureAirport" id="aereo">
                                        <option value="Aeropuerto Internacional El Dorado" selected>Aeropuerto Internacional El Dorado</option>
                                        <option value="Aeropuerto Internacional Ministro Pistarini">Aeropuerto Internacional Ministro Pistarini</option>
                                        <option value="Aeropuerto Internacional de Carrasco">Aeropuerto Internacional de Carrasco</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="llegada" title>Llega a</label>
                                </div>
                                <div class="ant-input">
                                    <select name="arrivalAirport" id="aereo">
                                        <option value="Aeropuerto Internacional El Dorado" selected>Aeropuerto Internacional El Dorado</option>
                                        <option value="Aeropuerto Internacional Ministro Pistarini">Aeropuerto Internacional Ministro Pistarini</option>
                                        <option value="Aeropuerto Internacional de Carrasco">Aeropuerto Internacional de Carrasco</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2 class="register-subtitulo2">Datos del viaje</h2>
                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="horarioSalida" title>Hora de Salida</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="time" id="horarioSalida" name="departureTime" value="<%= locals.oldData ? oldData.departureTime : null %>">
                                    <p class="text-danger-front"></p>
                                </div>
                                <% if (locals.errors && errors.departureTime) { %>
                                    <div class="text-danger">
                                        <%= errors.departureTime.msg %> 
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="horarioLlegada" title>Hora de llegada</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="time" id="horarioLlegada" name="arrivalTime" value="<%= locals.oldData ? oldData.arrivalTime : null %>">
                                    <p class="text-danger-front"></p>
                                </div>
                                <% if (locals.errors && errors.arrivalTime) { %>
                                    <div class="text-danger">
                                        <%= errors.arrivalTime.msg %> 
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>



                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="diaVuelo" title>Dia del vuelo</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="date" id="diaVuelo" name="departureDate" value="<%= locals.oldData ? oldData.departureDate : null %>">
                                    <p class="text-danger-front"></p>
                                </div>
                                <% if (locals.errors && errors.departureDate) { %>
                                    <div class="text-danger">
                                        <%= errors.departureDate.msg %> 
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="precio" title>Precio del vuelo</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="number" id="precio" name="ticketPrice" value="<%= locals.oldData ? oldData.ticketPrice : null %>">
                                    <p class="text-danger-front"></p>
                                </div>
                                <% if (locals.errors && errors.ticketPrice) { %>
                                    <div class="text-danger">
                                        <%= errors.ticketPrice.msg %> 
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="crear-cuenta">
                        <button title="Crear Producto" type="submit" class="boton-submit">
                            <span>Confirmar Creacion de Producto</span>
                        </button>
                    </div>
                </form>
            </div>
    </main>

    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
    <script src="/js/scriptProductCreate.js"></script>
</body>

</html>