<a href="/" class="link-img"><img src="/images/arcour-fondo-blanco.png"></a>
<div class="iconos-header">

    <div class="burger-menu">
        <i class="fas fa-bars" style="color: white;"></i>
    </div>

    <div class="iconos-header">
        <% if (locals.validationUser) { %>
            <!-- Implementacion del profile-->
            
            <a href="/users/profile"><h3> Hola <%= locals.loggedUser.nombre %></h3></a>
            <a href="/users/logOut">Cerrar Sesion</a>
        <% } else if (locals.validationAdmin) { %>
            <!-- Implementacion del profile y el icono admin-->
            <h3>hola <%= locals.loggedAdmin.empresa %></h3>
            <a href="/users/logOut">Cerrar Sesion</a>

        <% } else { %>       
            <a href="/users/login"><i class=" fa-solid fa-user"></i></a>
            <a href="/users/register"><i class="fa-solid fa-registered"></i></a>
        <% } %>
    </div>
</div>