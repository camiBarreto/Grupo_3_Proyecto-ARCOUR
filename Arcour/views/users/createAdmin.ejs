<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARCOUR</title>
    <link rel="icon" href="/images/Logo-ARCOUR.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>

    <nav class="main-nav">
        <%- include("../partials/navBar.ejs") %>
    </nav>

    <main>

        <div class="contenido-register">

            <div class="login-box">
                <h2 id="titulo">Crea tu cuenta de Administrador</h2>
                <h2 class="register-subtitulo">01 Datos de la Empresa</h2>
                <form action="/users/post/admin" method="post" class="register-form">

                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="name" title>Nombre de la Empresa</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="text" maxlength="25" id="name" name="nombreEmpresa">
                                </div>
                                <% if (locals.errors && errors.nombreEmpresa) { %>
                                    <div class=" text-danger">
                                        <%= errors.nombreEmpresa.msg %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="paisOrigen" title>País de Orígen</label>
                                </div>
                                <div class="ant-input">
                                    <select name="paisOrigen" id="paisOrigen">
                                        <option value="argentina" selected>Argentina</option>
                                        <option value="colombia">Colombia</option>
                                        <option value="uruguay">Uruguay</option>
                                        <option value="bolivia">Bolivia</option>
                                        <option value="paraguay">Paraguay</option>
                                        <option value="peru">Peru</option>
                                        <option value="brasil">Brasil</option>
                                        <option value="venezuela">Venezuela</option>
                                        <option value="chile">Chile</option>
                                        <option value="ecuador">Ecuador</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2 class="register-subtitulo2">02 Datos de Acceso</h2>
                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="mail" title>Correo Empresarial</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="email" maxlength="40" id="mail" name="correo">
                                </div>
                                <% if (locals.errors && errors.correo) { %>
                                    <div class=" text-danger">
                                        <%= errors.correo.msg %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="mail-re" title>Contraseña</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="password" maxlength="40" id="mail-re"
                                        name="password">
                                </div>
                                <% if (locals.errors && errors.password) { %>
                                    <div class=" text-danger">
                                        <%= errors.password.msg %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>



                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="pais" title>País a agregar Ruta</label>
                                </div>
                                <div class="ant-input">
                                    <select name="paisRuta" id="pais">
                                        <option value="argentina" selected>Argentina</option>
                                        <option value="colombia">Colombia</option>
                                        <option value="uruguay">Uruguay</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="aereo" title>Aerolínea que agrega la Nueva Ruta</label>
                                </div>
                                <div class="ant-input">
                                    <select name="aerolinea" id="aereo">
                                        <option value="latam" selected>LATAM Airlines</option>
                                        <option value="avianca">Avianca</option>
                                        <option value="aerolíneas Argentinas">Aerolíneas Argentinas</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>


                    <h2 class="register-subtitulo2">03 Contacto</h2>

                    <div class="ant-col">
                        <div class="ant-inside">
                            <div class="ant-label">
                                <label for="number" title>Número de contacto (+)</label>
                            </div>
                            <div class="ant-input">
                                <input name="contacto" class="input-box" type="text" maxlength="25" id="number">
                            </div>
                            <% if (locals.errors && errors.contacto) { %>
                                <div class=" text-danger">
                                    <%= errors.contacto.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>

                    <h2 class="register-subtitulo2">04 Información Adicional</h2>
                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-input">
                                    <label class="label-tyc">
                                        <span class="ant-checkbox">
                                            <input type="checkbox" id="check" name="t&c">
                                            <span class="ant-checkbox-inner"></span>
                                        </span>
                                        <span class="tyc">
                                            Acepto<a target="_blank" class="link-tc" href="">&nbsp;Términos y
                                                Condiciones&nbsp;</a>
                                            y<a target="_blank" class="link-tc" href="">&nbsp;políticas de protección de
                                                datos&nbsp;</a>
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="crear-cuenta">
                        <button title="Crear Admin" type="submit" class="boton-submit">
                            <span>Crear Cuenta de Administrador</span>
                        </button>
                    </div>
                </form>
            </div>
    </main>

    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
</body>

</html>