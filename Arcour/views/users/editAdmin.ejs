<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARCOUR</title>
    <link rel="icon" href="/images/Logo-ARCOUR.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>

    <nav class="main-nav">
        <%- include("../partials/navBar.ejs") %>
    </nav>

    <main>

        <div class="contenido-register">

            <div class="login-box">
                <h2 id="titulo">Edita tu cuenta de Administrador</h2>
                <h2 class="register-subtitulo">01 Datos de la Empresa</h2>
                <form action="/users/<%= admin.id %>/put/admin?_method=PUT" method="post" class="register-form">

                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="name" title>Nombre de la Empresa</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="text" maxlength="25" id="name" name="empresa" value="<%= admin.empresa %>">
                                </div>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="paisOrigen" title>País de Orígen</label>
                                </div>
                                <div class="ant-input">
                                    <select name="paisDeOrigen" id="paisOrigen">
                                        <% const paises =["argentina", "colombia", "uruguay", "bolivia", "paraguay", "peru", "brasil", "venezuela", "chile", "ecuador"]%>
                                        <% paises.forEach(pais=> { %>
                                             <option value="<%= pais %>" <%=admin.paisDeOrigen===pais? "selected" : "" %>><%= pais.charAt(0).toUpperCase() + pais.slice(1) %>
                                             </option>
                                             <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2 class="register-subtitulo2">02 Datos de Acceso</h2>
                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="mail" title>Correo Empresarial</label>
                                </div>
                                <div class="ant-input">
                                    <input class="input-box" type="email" maxlength="40" id="mail" name="correoEmpresarial"  value="<%= admin.correoEmpresarial %>">
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="ant-row">
                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="pais" title>País a agregar Ruta</label>
                                </div>
                                <div class="ant-input">
                                    <select name="paisRuta" id="pais">
                                        <% const paisesRuta =["argentina", "colombia", "uruguay"]%>
                                        <% paisesRuta.forEach(pais=> { %>
                                             <option value="<%= pais %>" <%=admin.paisRuta===pais? "selected" : "" %>><%= pais.charAt(0).toUpperCase() + pais.slice(1) %>
                                             </option>
                                             <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="ant-col">
                            <div class="ant-inside">
                                <div class="ant-label">
                                    <label for="aereo" title>Aerolínea que agrega la Nueva Ruta</label>
                                </div>
                                <div class="ant-input">
                                    <select name="aerolinea" id="aereo">
                                        <% const aerolinea =["latam Airlines","avianca","aerolineas Argentinas"]%>
                                        <% aerolinea.forEach(linea => { %>
                                             <option value="<%= linea %>" <%=admin.linea===linea? "selected" : "" %>><%= linea.charAt(0).toUpperCase() + linea.slice(1) %>
                                             </option>
                                             <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>


                    <h2 class="register-subtitulo2">03 Contacto</h2>

                    <div class="ant-col">
                        <div class="ant-inside">
                            <div class="ant-label">
                                <label for="number" title>Número de contacto (+)</label>
                            </div>
                            <div class="ant-input">
                                <input name="contacto" class="input-box" type="text" maxlength="25" id="number"  value="<%= admin.contacto %>">
                            </div>
                        </div>
                    </div>

                    <div class="crear-cuenta">
                        <button title="Crear Admin" type="submit" class="boton-submit">
                            <span>Confirmar edición de información</span>
                        </button>
                    </div>
                </form>
            </div>
    </main>

    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
</body>

</html>